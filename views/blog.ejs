<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%-include('./partials/nav') %>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" width="60px">
            <%= blog.createdBy.name %>
            <h1>
                <%= blog.title %>
            </h1>
            <div class="container">
                            <img src="<%= blog.coverImageURL %>" width="700px" alt="">

            </div>
            <pre class="mt-3"><%= blog.body %></pre>
        </div>

       <div class="container mt-3">
             <h1>Comments</h1> <%=comments.length%>

             <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" name="content" required="true" class="form-control" placeholder="Enter your comment">

                    </div>

                    <button type="submit" class="btn btn-sm btn-primary">Add</button>

                </form>
             <% } %>

       </div>

    <div class="mt-3 container">
        <% comments.forEach(comment=> { %>
            <img src="<%= blog.createdBy.profileImageURL %>" width="60px" />
            <%= comment.createdBy.name %>:
                <pre><%=comment.content%></pre>
    
                <% }) %>
    </div>





        <%-include('./partials/script') %>
</body>

</html>