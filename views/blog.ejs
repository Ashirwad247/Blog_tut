<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
   
    <%-include('./partials/nav') %>
    
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" width="60px">
            <%= blog.createdBy.name %>
                <h1>
                    <%= blog.title %>
                </h1>
                <div class="container">
                    <img src="<%= blog.coverImageURL %>" width="700px" alt="">
    
                </div>
                <pre  style="font-size:larger;"  class="mt-3"><%= blog.body %></pre>
        </div>

        <div>
            
            <div class="container">
                <h1>Comments</h1>
                <div>
                    <% if (locals.user) {%>
                        <form action="/blog/comment/<%= blog._id %>" method="post">
                            <div class="mb-3">
                                <input type="text" name="content" required="true" class="form-control" placeholder="Enter your comment">
                
                            </div>
                
                            <button type="submit" class="btn btn-sm btn-primary">Add</button>
                
                        </form>
                        <%}%>
                </div>
                
                <div>
                    <% comments.forEach(comment=> { %>
                        <img src="<%= comment.commentedBy.coverImageURL %>" alt="">
                        <h2>
                            <%=comment.commentedBy.name%>
                        </h2>
                        <p>
                            <%= comment.content%>
                        </p>
                        <% }) %>
                </div>
                </div>

            </div>
        
        



        <%-include('./partials/script') %>
</body>

</html>